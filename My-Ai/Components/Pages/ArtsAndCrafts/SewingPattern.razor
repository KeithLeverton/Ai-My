@page "/SewingPattern"
@rendermode InteractiveServer
@using My_Ai.Components.Shared
@using My_Ai.Services
@using My_Ai.Util
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Http

<PageTitle>Sewing Pattern</PageTitle>

<Banner Title="Sewing Pattern"
        Subtitle="Upload an image of clothes to turn it into a sewing pattern"
        BackgroundImageUrl='@Assets["images/artsandcrafts/paintbrushes.jpg"]'
        BackgroundPosition="center 30%"
        Overlay="rgba(0,0,0,.35)"
        MinHeight="200px"
        PaddingY="2rem" />

<div class="container py-3">
    <div class="mb-3">
        <label class="form-label">Upload your image</label>
        <InputFile OnChange="OnFileSelected" accept=".jpg,.png" />
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-2">@errorMessage</div>
        }
        @if (imageFile != null)
        {
            <div class="mt-2">
                <small class="text-muted">
                    Selected: @imageFile.Name (@(FormatFileSize(imageFile.Size)))
                </small>
            </div>
        }
    </div>

    <button class="btn btn-primary @(isProcessing ? "loading" : "")" @onclick="SubmitAsync" disabled="@(imageFile == null || isProcessing)">
        @if (isProcessing)
        {
            <span class="spinner-border spinner-border-sm me-2"></span>
            <span class="btn-text">Generating sewing Pattern...</span>
        }
        else
        {
            <span class="btn-text">Generate sewing Pattern</span>
        }
    </button>

    @if (!string.IsNullOrWhiteSpace(result))
    {
        <div class="card mt-3">
            <div class="card-header">Result</div>
            <div class="card-body">
                <img src="@result" class="img-fluid" alt="Sewing Pattern result" />
            </div>
        </div>
    }
</div>

<LoadingSpinner IsVisible="@isProcessing" Message="Creating your sewing pattern..." />

@code {
    private IBrowserFile? imageFile;
    [Inject] private IProcessRequest Processor { get; set; } = default!;
    private string? result;
    private string? errorMessage;
    private bool isProcessing = false;

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        imageFile = e.File;

        // Validate file size
        const long maxFileSize = 10 * 1024 * 1024; // 10MB
        if (imageFile.Size > maxFileSize)
        {
            errorMessage = $"File is too large. Maximum size is {FormatFileSize(maxFileSize)}.";
            imageFile = null;
            return;
        }

        var allowedTypes = new[] { "image/jpeg", "image/jpg", "image/png" };
        if (!allowedTypes.Contains(imageFile.ContentType.ToLower()))
        {
            errorMessage = "Please select a JPEG or PNG image file.";
            imageFile = null;
            return;
        }
    }

    private async Task SubmitAsync()
    {
        if (imageFile is null)
            return;

        isProcessing = true;
        errorMessage = null;
        result = null;
        StateHasChanged();

        try
        {
            // Copy to a seekable stream
            await using var browserStream = imageFile.OpenReadStream(10 * 1024 * 1024);
            using var ms = new MemoryStream();
            await browserStream.CopyToAsync(ms);
            ms.Position = 0;

            var formFile = new FormFile(ms, 0, ms.Length, "file", imageFile.Name)
            {
                Headers = new HeaderDictionary(),
                ContentType = imageFile.ContentType
            };

            result = await Processor.ProcessImageAsync(formFile, Prompts.SewingPrompt);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}