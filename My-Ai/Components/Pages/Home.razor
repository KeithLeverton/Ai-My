@page "/"
@layout HomeLayout

<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="welcome-section">
        <h1>Welcome to Ai-My</h1>
        <p class="lead">Choose a tile to get started</p>
    </div>

    <details class="expandable-section job-applications-section" open>
        <summary>Job Applications</summary>
        <div class="page-tiles">
            <a href="/ReviewCV" class="page-tile review-cv-tile">
                <div class="tile-icon">📎</div>
                <div class="tile-title">Review your CV</div>
                <div class="tile-description">Review your CV</div>
            </a>

            <a href="/CoverLetter" class="page-tile cover-letter-tile">
                <div class="tile-icon">✉️</div>
                <div class="tile-title">Cover Letter</div>
                <div class="tile-description">Customise a cover letter</div>
            </a>

            <a href="/CustomiseCV" class="page-tile customise-cv-tile">
                <div class="tile-icon">📄</div>
                <div class="tile-title">Customise cv</div>
                <div class="tile-description">Customise your cv to a job description</div>
            </a>

        </div>
    </details>

    <details class="expandable-section arts-and-crafts-section" open>
        <summary>Arts and Crafts Applications</summary>
        <div class="page-tiles">
            <a href="/ColouringPage" class="page-tile colouring-page-tile">
                <div class="tile-icon">🖼️</div>
                <div class="tile-title">Colouring page</div>
                <div class="tile-description">Create a colouring page from a picture</div>
            </a>

            <a href="/SowingPattern" class="page-tile sowing-pattern-tile">
                <div class="tile-icon">✂️</div>
                <div class="tile-title">Sowing Pattern</div>
                <div class="tile-description">Create a sowing patter from a picutre of clothes</div>
            </a>
        </div>
    </details>
</div>