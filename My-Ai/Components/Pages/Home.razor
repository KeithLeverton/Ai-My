@page "/"
@layout HomeLayout

<PageTitle>Ai-My - AI-Powered CV and Creative Tools</PageTitle>

<div class="home-container">
    <header class="welcome-section">
        <h1>Welcome to Ai-My</h1>
        <p class="lead">Choose a service below to get started with AI-powered assistance</p>
    </header>

    <section class="services-section">
        <details class="expandable-section job-applications-section" open>
            <summary role="button" aria-expanded="true" aria-controls="job-apps-content">
                <span class="section-title">Job Applications</span>
            </summary>
            <div id="job-apps-content" class="page-tiles" role="region" aria-labelledby="job-apps-summary">
                <a href="/ReviewCV" class="page-tile review-cv-tile" aria-describedby="review-cv-desc">
                    <div class="tile-icon" aria-hidden="true">📎</div>
                    <div class="tile-title">Review your CV</div>
                    <div class="tile-description" id="review-cv-desc">Get AI-powered feedback to improve your CV</div>
                </a>

                <a href="/CoverLetter" class="page-tile cover-letter-tile" aria-describedby="cover-letter-desc">
                    <div class="tile-icon" aria-hidden="true">✉️</div>
                    <div class="tile-title">Cover Letter</div>
                    <div class="tile-description" id="cover-letter-desc">Create customized cover letters for job applications</div>
                </a>

                <a href="/CustomiseCV" class="page-tile customise-cv-tile" aria-describedby="customise-cv-desc">
                    <div class="tile-icon" aria-hidden="true">📄</div>
                    <div class="tile-title">Customise CV</div>
                    <div class="tile-description" id="customise-cv-desc">Tailor your CV to specific job descriptions</div>
                </a>
            </div>
        </details>

        <details class="expandable-section arts-and-crafts-section" open>
            <summary role="button" aria-expanded="true" aria-controls="arts-crafts-content">
                <span class="section-title">Arts and Crafts Applications</span>
            </summary>
            <div id="arts-crafts-content" class="page-tiles" role="region" aria-labelledby="arts-crafts-summary">
                <a href="/ColouringPage" class="page-tile colouring-page-tile" aria-describedby="coloring-desc">
                    <div class="tile-icon" aria-hidden="true">🖼️</div>
                    <div class="tile-title">Colouring Page</div>
                    <div class="tile-description" id="coloring-desc">Transform photos into printable coloring pages</div>
                </a>

                <a href="/SewingPattern" class="page-tile sewing-page-tile" aria-describedby="sewing-desc">
                    <div class="tile-icon" aria-hidden="true">✂️</div>
                    <div class="tile-title">Sewing Pattern</div>
                    <div class="tile-description" id="sewing-desc">Create sewing patterns from clothing images</div>
                </a>
            </div>
        </details>
    </section>
</div>